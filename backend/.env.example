# Example .env for the Django backend (DO NOT commit real secrets here)
# Place a copy named `.env` in the same folder and fill real values locally.

# Django core
SECRET_KEY=replace-this-with-a-secure-secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Option A: single DATABASE_URL (recommended)
# DATABASE_URL=postgres://dbuser:dbpassword@localhost:5432/dbname

# Option B: individual DB variables (Postgres)
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis / Celery (if used)
# REDIS_URL=redis://localhost:6379/0
