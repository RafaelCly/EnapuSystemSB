[MASTER]
# Cargar plugins de Django para Pylint
load-plugins=pylint_django
django-settings-module=backend.settings

[MESSAGES CONTROL]
# Deshabilitar warnings específicos de Django que son falsos positivos
disable=
    # Django ORM genera dinámicamente el atributo 'objects'
    no-member,
    # Las clases Meta en modelos Django y serializers DRF son intencionalmente pequeñas
    too-few-public-methods,
    # Los ViewSets de DRF heredan de muchas clases por diseño
    too-many-ancestors,
    # Importaciones de pytest en archivos de test
    import-error,
    # Django no está configurado en análisis estático
    django-not-configured

[DESIGN]
# Configuración de límites de diseño
max-args=7
max-positional-arguments=7

[FORMAT]
# Longitud máxima de línea
max-line-length=100
